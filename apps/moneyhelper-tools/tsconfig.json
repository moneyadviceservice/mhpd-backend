{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "target": "es2015",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@maps-digital/shared/hooks": ["../../libs/shared/hooks/index.ts"],
      "@maps-digital/shared/ui": ["../../libs/shared/ui/src/index.ts"],
      "@maps-react/hooks/*": ["../../libs/shared/hooks/src/*"],
      "@maps-react/layouts/*": ["../../libs/shared/layouts/src/*"],
      "@maps-react/form/*": ["../../libs/shared/form/src/*"],
      "@maps-react/common/*": ["../../libs/shared/ui/src/*"],
      "@maps-react/core/*": ["../../libs/shared/core/src/*"],
      "@maps-react/vendor/*": ["../../libs/shared/vendor/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
